RewriteEngine On

# Force HTTPS and non-www
RewriteCond %{HTTP_HOST} ^www\.rafflesksa\.com [NC]
RewriteRule ^ https://rafflesksa.com%{REQUEST_URI} [L,R=301]

# Redirect non-www to www
RewriteCond %{HTTPS} !=on [OR]
RewriteCond %{HTTP_HOST} ^www\. [NC]
RewriteRule ^ https://rafflesksa.com%{REQUEST_URI} [L,R=301]




RewriteEngine On
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$https://rafflesksa.com/$1 [R,L]



RewriteEngine On
RewriteCond %{HTTP_HOST} ^rafflesksa\.com [NC]
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://rafflesksa.com/$1 [R,L]


# Cache images, CSS, and JavaScript files for 1 year
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
</IfModule>


# Cache HTML content for 1 hour but revalidate with the server
<IfModule mod_headers.c>
    Header set Cache-Control "max-age=3600, must-revalidate"
</IfModule>

# Enable ETag and Last-Modified headers
<IfModule mod_headers.c>
    Header unset ETag
    FileETag None
    Header unset Last-Modified
</IfModule>

# Cache fonts for 1 month
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType application/font-woff "access plus 1 month"
    ExpiresByType application/font-woff2 "access plus 1 month"
</IfModule>

# Cache JSON and XML files for 1 hour
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType application/json "access plus 1 hour"
    ExpiresByType application/xml "access plus 1 hour"
</IfModule>

